<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       xmlns:p="http://www.springframework.org/schema/p" >

    <bean id="single-book" class="com.naukma.di.Book"
          p:name="Book 0"
    />

    <bean id="library-single" class="com.naukma.di.LibraryWithSingleBook">
        <constructor-arg ref="single-book"/>
    </bean>

    <bean id="library-many" class="com.naukma.di.LibraryWithManyBooks">
        <constructor-arg>
            <list>
                <bean class="com.naukma.di.Book" p:name="Book 1"/>
                <bean class="com.naukma.di.Book" p:name="Book 2"/>
                <bean class="com.naukma.di.Book" p:name="Book 3"/>
                <bean class="com.naukma.di.Book" p:name="Book 4"/>
                <bean class="com.naukma.di.Book" p:name="Book 5"/>
            </list>
        </constructor-arg>
    </bean>

</beans>